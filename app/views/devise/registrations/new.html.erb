<div class="body">
  <div class="logo">
  <%= image_tag("ourjournalIcon.png", size: "450x280", alt: "facebook") %>
  </div>
  <div class="about">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'subLabel' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'subInput' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'subLabel' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'subInput' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'subLabel' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'subInput' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'submitBtn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>