<div class="body">
  <div class="logo">
  <%= image_tag("ourjournalIcon.png", size: "450x280", alt: "facebook") %>
  </div>
  <div class="about">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'subLabel' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'subInput' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'subLabel' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'subInput' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'submitBtn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>  
  </div>
</div>