<%= form_with model: [ @category, @task ] do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :deadline %>
    <%= form.text_field :deadline, placeholder:'Select Date and Time...',
                                   class: 'datepicker' %>
  </div>

  <!-- flatpickr -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    const date_time = document.querySelector('.datepicker');
    const fp = flatpickr(date_time, {
      altInput: true,
      altFormat: "F j, Y H:i",
      enableTime: true,
      dateFormat: "Y-m-d H:i",})

    // Removes erroneous class tag added by script
    document.querySelector('.form-control').classList.remove('form-control')
  </script>

  <div>
    <%= form.submit 'Create Task' %>
  </div>
<% end %>