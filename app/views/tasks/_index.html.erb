<h1>Tasks Index</h1>

<% @tasks.each do |task| %>
    <%= task.title %>

    <%= task.description %>

    <%= task.completed %>

    <%= task.deadline %>

    <%= link_to 'See More', category_task_path(@category, task) %>

    <%= link_to 'Edit Task', edit_category_task_path(@category, task) %>

    <%= link_to 'Delete Task', category_task_path(@category, task),
        method: :delete,
        data: { confirm: "Are you sure? "} %>

    <br>
<% end %>