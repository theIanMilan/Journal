<%# Renders only if there are tasks due in the future and not today %>
<% if @tasks_others.count != 0 %>
  <h1> Pending Tasks </h1>

  <% @tasks_others.each do |task| %>
      <%= task.title %>

      <%= task.description %>

      <% if task.completed %>
        <p class="text-success">Accomplished</p>
      <% else %>
        <p class="text-secondary">Pending</p>
      <% end %>

      <%= task.deadline.strftime('%B %d, %Y %H:%M %p') %>

      <%= link_to 'See More', category_task_path(@category, task) %>

      <%= link_to 'Edit Task', edit_category_task_path(@category, task) %>

      <%= link_to 'Delete Task', category_task_path(@category, task),
          method: :delete,
          data: { confirm: "Are you sure? "} %>

      <br>
  <% end %>
<% end %>